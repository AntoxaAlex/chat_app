<!doctype html>
<html>
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/app.css" type="text/css">
    <script src="https://kit.fontawesome.com/8ee8b946fd.js" crossorigin="anonymous"></script>
    <title>Socket.IO chat</title>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a id="userName" class="nav-item nav-link active" href="#"><%=currentUser.username%></a>
            <a class="nav-item nav-link" href="/logout">Logout</a>
        </div>
    </div>
</nav>
<div class="container">
    <div class="contacts-container">

    </div>
    <div class="chat-container">
        <div class="messages-container">
            <ul id="messages" class="list-group">
                <% room.messages.forEach((message)=>{%>
                    <% if(currentUser&&message.author.username == currentUser.username){ %>
                <li class="list-group-item align-self-start mb-3 list-group-item-info"><%=message.author.username%> : <%=message.text%></li>
                    <%}else{%>
                    <li class="list-group-item align-self-end mb-3 list-group-item-secondary"><%=message.author.username%> : <%=message.text%></li>
                    <%}%>
                <%})%>
            </ul>
        </div>
        <form action="/rooms/<%=room._id%>/message/new" method="POST">
            <div class="form-inline mt-1 align-self-end">
                <input class="form-control" type="text" id="m" name="message[text]" autocomplete="off">
                <button class="btn btn-success">SEND</button>
            </div>
        </form>
    </div>
</div>

<script
        src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
        crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/ajax.js"></script>
</body>
</html>