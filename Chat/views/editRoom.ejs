<%- include("./partials/Auth-Room-New-Edit/header")%>

<div class="container-fluid">
    <div class="editroom-container text-center">
        <div class="row">
            <div class="col-md-12 text-center"><h1>Edit <%= room.title%> room</h1></div>
            <div style="width:30%; margin:25px auto;">
                <form action="/rooms/<%= room._id %>?_method=PUT" method="POST">
                    <div class="form-group"><input class="form-control" type="text" value="<%= room.title%>" name="room[title]"></div>
                    <div class="form-group"><textarea class="form-control" name="room[description]"><%= room.description%></textarea></div>
                    <div class="form-group"><button class="btn btn-lg btn-primary btn-block">EDIT</button></div>
                </form>
                <a href="/rooms">GO Back</a>
            </div>
        </div>
    </div>
</div>

<%- include("./partials/Auth-Room-New-Edit/footer")%>